<div class="post-manager">

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Created Time</th>
            <th scope="col">Edit</th>
            <th scope="col">Remove</th>
        </tr>
        </thead>
        <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{created_at}}</td>

            <td>
                <a href="/createpost?editid={{id}}">edit</a>
            </td>
            <td>
                <a href="/post-manager?deleteid={{id}}">remove</a>
            </td>
        </tr>
        {{/each}}
        </tbody>

    </table>
</div>